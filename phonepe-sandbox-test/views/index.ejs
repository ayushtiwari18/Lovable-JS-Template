<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhonePe UPI Payment Demo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 90%;
        }

        h1 {
            color: #333;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
        }

        .logo {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .amount-input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .amount-input:focus {
            outline: none;
            border-color: #667eea;
        }

        .pay-button {
            background: linear-gradient(45deg, #5f27cd, #00d2d3);
            color: white;
            border: none;
            padding: 15px 30px;
            font-size: 1.1rem;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-weight: 600;
            transition: transform 0.2s ease;
        }

        .pay-button:hover {
            transform: translateY(-2px);
        }

        .pay-button:active {
            transform: translateY(0);
        }

        .info {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #666;
        }

        .loading {
            display: none;
            color: #667eea;
            font-weight: 600;
            margin-top: 1rem;
        }

        .amount-buttons {
            display: flex;
            gap: 10px;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .quick-amount {
            background: #f8f9fa;
            border: 1px solid #ddd;
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            flex: 1;
            min-width: 70px;
        }

        .quick-amount:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="logo">ðŸ“±ðŸ’³</div>
        <h1>PhonePe UPI Payment</h1>

        <form action="/pay" method="POST" id="paymentForm">
            <div class="amount-buttons">
                <button type="button" class="quick-amount" onclick="setAmount(1000)">â‚¹10</button>
                <button type="button" class="quick-amount" onclick="setAmount(5000)">â‚¹50</button>
                <button type="button" class="quick-amount" onclick="setAmount(10000)">â‚¹100</button>
                <button type="button" class="quick-amount" onclick="setAmount(50000)">â‚¹500</button>
            </div>

            <input type="number" name="amount" id="amount" class="amount-input"
                placeholder="Enter amount in paise (100 = â‚¹1)" value="10000" min="100" step="100" required>

            <button type="submit" class="pay-button" id="payBtn">
                ðŸš€ Pay with PhonePe
            </button>

            <div class="loading" id="loading">
                Processing payment... ðŸ”„
            </div>
        </form>

        <div class="info">
            <strong>ðŸ’¡ Test Mode:</strong><br>
            â€¢ Amount is in paise (100 paise = â‚¹1)<br>
            â€¢ Use PhonePe sandbox environment<br>
            â€¢ No real money will be charged
        </div>
    </div>

    <script>
        function setAmount(paise) {
            document.getElementById('amount').value = paise;
            // Update placeholder to show rupees equivalent
            const rupees = paise / 100;
            document.getElementById('amount').placeholder = `â‚¹${rupees} (${paise} paise)`;
        }

        document.getElementById('paymentForm').addEventListener('submit', function (e) {
            const amount = document.getElementById('amount').value;
            if (!amount || amount < 100) {
                e.preventDefault();
                alert('Please enter a valid amount (minimum â‚¹1 or 100 paise)');
                return;
            }

            // Show loading state
            document.getElementById('payBtn').style.display = 'none';
            document.getElementById('loading').style.display = 'block';

            console.log('Initiating payment for:', amount, 'paise');
        });

        // Update amount display on input
        document.getElementById('amount').addEventListener('input', function (e) {
            const paise = parseInt(e.target.value) || 0;
            const rupees = (paise / 100).toFixed(2);
            e.target.placeholder = paise > 0 ? `â‚¹${rupees} (${paise} paise)` : 'Enter amount in paise';
        });
    </script>
</body>

</html>